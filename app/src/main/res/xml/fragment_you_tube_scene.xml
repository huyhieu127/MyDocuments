<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@id/miniWindow"
        app:constraintSetStart="@+id/fullWindow"
        app:transitionFlags="onInterceptTouchReturnSwipe">
        <OnSwipe
            app:dragDirection="dragDown"
            app:maxAcceleration="70"
            app:touchAnchorId="@id/playerView"
            app:touchRegionId="@id/frameWindow" />
        <KeyFrameSet>
            <!--Mini Window-->
            <KeyPosition
                app:curveFit="linear"
                app:framePosition="80"
                app:motionTarget="@id/playerView"
                app:percentWidth="0"
                app:percentX="0" />
            <KeyPosition
                app:curveFit="linear"
                app:framePosition="80"
                app:motionTarget="@id/frameWindowContainerMini"
                app:percentWidth="0"
                app:percentX="0" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="80"
                app:motionTarget="@id/frameWindowContainerMini" />

            <!--Container Watching-->
            <KeyAttribute
                android:alpha="1"
                app:framePosition="90"
                app:motionTarget="@id/frameContainerWatching" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="50"
                app:motionTarget="@id/frameHeaderWatching" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="50"
                app:motionTarget="@id/frameTabWatching" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="50"
                app:motionTarget="@id/rcvWatching" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="95"
                app:motionTarget="@id/frameHeaderWatching" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="95"
                app:motionTarget="@id/frameTabWatching" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="95"
                app:motionTarget="@id/rcvWatching" />

        </KeyFrameSet>
    </Transition>
    <Transition
        app:constraintSetEnd="@id/fullWindowCollapse"
        app:constraintSetStart="@+id/fullWindow"
        app:transitionFlags="onInterceptTouchReturnSwipe">
        <OnSwipe
            app:autoCompleteMode="spring"
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/rcvWatching"
            app:touchRegionId="@id/frameContainerWatching" />
    </Transition>
    <!--Window-->
    <ConstraintSet android:id="@+id/fullWindow">
        <Constraint android:id="@+id/rcvHome" />
        <Constraint android:id="@+id/frameWindow" />
        <Constraint android:id="@+id/playerView" />
        <Constraint android:id="@+id/frameTabBar" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/miniWindow">
        <Constraint
            android:id="@+id/rcvHome"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/frameTabBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameAppbar" />
        <Constraint
            android:id="@+id/frameWindow"
            android:layout_width="0dp"
            android:layout_height="@dimen/_48sdp"
            app:layout_constraintBottom_toTopOf="@id/frameTabBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/playerView"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_48sdp"
            app:layout_constraintBottom_toBottomOf="@id/frameWindow"
            app:layout_constraintStart_toStartOf="@id/frameWindow"
            app:layout_constraintTop_toTopOf="@id/frameWindow" />
        <Constraint
            android:id="@+id/frameWindowContainerMini"
            android:layout_width="0dp"
            android:layout_height="@dimen/_48sdp"
            app:layout_constraintBottom_toBottomOf="@id/playerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/playerView"
            app:layout_constraintTop_toTopOf="@id/playerView" />
        <Constraint
            android:id="@+id/frameTabBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorBlackYoutube"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint android:id="@+id/frameHeaderWatching">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/frameTabWatching">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/rcvWatching">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint
            android:id="@+id/frameContainerWatching"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/frameFakeBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frameWindow" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/fullWindowCollapse"
        app:deriveConstraintsFrom="@+id/fullWindow">
        <Constraint
            android:id="@+id/frameHeaderWatching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/playerView"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/rcvWatching"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameTabWatching" />
        <Constraint
            android:id="@id/frameTabWatching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fillViewport="true"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameHeaderWatching" />
    </ConstraintSet>
</MotionScene>
