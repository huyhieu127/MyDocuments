<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyDocuments" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorContent">@color/colorGreenMint</item>
        <item name="colorTitle">@color/colorRedAlert</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>-->
        <!--Set transparent-->
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->
        <!-- Customize your theme here. -->
    </style>

    <!--Dialog-->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowSwipeToDismiss">true</item>
        <!--<item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>-->
    </style>

    <style name="CustomAlertDialog_full_screen" parent="CustomAlertDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
    </style>

    <!--Bottom sheet dialog-->
    <style name="CustomBottomSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomBottomSheet.Transparent" parent="CustomBottomSheet">
        <item name="android:backgroundDimEnabled">false</item>
        <!--<item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>-->
    </style>

    <!--Bottom sheet modal-->
    <style name="CustomBottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomBottomSheetModal.Transparent" parent="CustomBottomSheetModal">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--View-->
    <style name="OptSettings">
        <item name="optSrcArrowRight">@drawable/ic_arrow_right</item>
        <item name="optTintIcon">@color/colorSecondary</item>
        <item name="optBgColorIcon">@color/colorSecondaryLight</item>
    </style>

    <style name="OptListOfBeneficiaries">
        <item name="optTintIcon">@color/white</item>
        <item name="optBgColorIcon">@color/colorSecondary</item>
    </style>

</resources>