<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.ProfileFragment">

    <View
        android:id="@+id/vBgIcon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/bg_corner_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:backgroundTint="@color/colorSecondaryLight" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@id/vBgIcon"
        app:layout_constraintEnd_toEndOf="@id/vBgIcon"
        app:layout_constraintStart_toStartOf="@id/vBgIcon"
        app:layout_constraintTop_toTopOf="@id/vBgIcon"
        tools:srcCompat="@drawable/ic_profile_selected" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="@dimen/margin_bottom_title_option_view"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvContent"
        app:layout_constraintEnd_toStartOf="@id/tvValue"
        app:layout_constraintStart_toEndOf="@id/vBgIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Số của tôi"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/colorSecondary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvValue"
        app:layout_constraintStart_toEndOf="@id/vBgIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Danh sách thụ hưởng Danh sách thụ hưởng Danh sách thụ hưởng Danh sách thụ hưởng Danh sách thụ hưởng "
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/colorSecondary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vBgIcon"
        app:layout_constraintEnd_toStartOf="@id/tvValueFill"
        app:layout_constraintTop_toTopOf="@id/vBgIcon"
        tools:text="+50,000,000"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvValueFill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bg_corner_4"
        android:backgroundTint="@color/colorPrimary"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vBgIcon"
        app:layout_constraintEnd_toStartOf="@id/imgArrowRight"
        app:layout_constraintTop_toTopOf="@id/vBgIcon"
        tools:text="Giảm 9%"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgArrowRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@id/vBgIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vBgIcon"
        tools:srcCompat="@drawable/ic_arrow_right" />


</androidx.constraintlayout.widget.ConstraintLayout>