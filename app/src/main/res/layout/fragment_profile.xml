<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context=".ui.fragments.components.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingHorizontal="24dp"
        android:paddingBottom="114dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/item_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:cardBackgroundColor="@color/colorSecondary"
                app:cardCornerRadius="8dp">

                <com.huyhieu.mydocuments.utils.commons.MySeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:secondaryProgress="100" />
            </com.google.android.material.card.MaterialCardView>

            <com.huyhieu.mydocuments.utils.commons.UNoteView
                android:id="@+id/noteSelfSetupLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:noteBgColorIcon="@color/colorPrimary"
                app:noteContent="Chủ động thiết lập các khoản vay trả góp phù hợp tài chính: xe máy, điện thoại,..."
                app:noteSeeMore="Tìm hiểu thêm"
                app:noteSrcIcon="@drawable/ic_home_selected"
                app:noteTitle="Khoản vay tự thiết lập" />

            <com.huyhieu.mydocuments.utils.commons.UNoteView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:noteBgColorIcon="@color/colorPrimary"
                app:noteContent="Mức cho vay sẽ tự động kích hoạt sau khi nhận được tháng lương đầu tiên"
                app:noteSrcIcon="@drawable/ic_home_selected"
                app:noteTitle="Thời gian kích hoạt hạn mức" />

            <com.huyhieu.mydocuments.utils.commons.UNoteView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:noteContent="Mức cho vay sẽ tự động kích hoạt sau khi nhận được tháng lương đầu tiên"
                app:noteTitle="Thời gian kích hoạt hạn mức" />

            <com.huyhieu.mydocuments.utils.commons.UNoteView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:noteBgColorIcon="@color/colorPrimary"
                app:noteBgDrawable="@drawable/bg_outline_corner_12"
                app:noteContent="Mức cho vay sẽ tự động kích hoạt sau khi nhận được tháng lương đầu tiên"
                app:noteSrcIcon="@drawable/ic_home_selected"
                app:noteTitle="Thời gian kích hoạt hạn mức" />

            <com.huyhieu.mydocuments.utils.commons.UCheckBox
                android:id="@+id/ckb"
                android:layout_width="wrap_content"
                android:layout_marginVertical="14dp"
                app:ckbContent="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In tempor lectus dis enim id at ipsum sit sem."
                app:ckbContentColor="@color/colorSecondary"
                android:layout_height="wrap_content" />


            <com.huyhieu.mydocuments.utils.commons.UOptionView
                android:id="@+id/optInformation"
                style="@style/OptSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:optContent="Thông tin cá nhân"
                app:optSrcIcon="@drawable/ic_profile_selected" />

            <com.huyhieu.mydocuments.utils.commons.UOptionView
                android:id="@+id/optListOfBeneficiaries"
                style="@style/OptListOfBeneficiaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:optContent="958/63/9 Lạc Long Quân, P.8, Tân Bình,
Hồ Chí Minh"
                app:optSrcIcon="@drawable/ic_scan_default"
                app:optTitle="Địa chỉ nơi ở hiện tại" />

            <com.huyhieu.mydocuments.utils.commons.UOptionView
                android:id="@+id/optChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:optBgColorIcon="@color/colorPrimary"
                app:optContent="Nguyễn Văn A"
                app:optSrcIcon="@drawable/ic_profile_selected"
                app:optTintIcon="@color/white"
                app:optTitle="Top-up"
                app:optValue="+25,000,000" />

            <com.huyhieu.mydocuments.utils.commons.UOptionView
                android:id="@+id/optCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:optBgDrawableIcon="@drawable/bg_outline_corner_12"
                app:optContent="195,000"
                app:optSrcIcon="@drawable/img_android_logo"
                app:optTitle="Thẻ 200k"
                app:optValueFill="Giảm 6%" />

            <com.huyhieu.mydocuments.utils.commons.UOptionView
                android:id="@+id/optAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:optSrcArrowRight="@drawable/ic_arrow_right"
                app:optSrcIcon="@drawable/img_google_play"
                app:optTitle="Phiên bản mới nhất"
                app:optValue="1.0.1" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        app:layoutDescription="@xml/bottom_sheet_motion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/vLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorGrayscaleDisable"
            app:layout_constraintBottom_toTopOf="@id/lnContainer" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/btnConfirm"
            tools:layout_editor_absoluteX="30dp">

            <com.huyhieu.mydocuments.utils.commons.UOptionView
                style="@style/OptListOfBeneficiaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                android:layout_marginTop="30dp"
                app:optContent="Cù Huy Hiếu"
                app:optSrcIcon="@drawable/ic_profile_selected"
                app:optTitle="Họ và tên" />

            <com.huyhieu.mydocuments.utils.commons.UOptionView
                style="@style/OptListOfBeneficiaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                app:optContent="id.huyhieu@gmail.com"
                app:optSrcIcon="@drawable/ic_scan_default"
                app:optTitle="Email" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.huyhieu.mydocuments.utils.commons.UButtonView
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:uButtonName="Button" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.constraintlayout.widget.ConstraintLayout>