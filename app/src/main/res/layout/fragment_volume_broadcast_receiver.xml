<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.broadcast_receiver.VolumeBroadcastReceiverFragment">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_gravity="center"
        android:text="Volume Broadcast Receiver Fragment" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp">

        <com.huyhieu.mydocuments.libraries.custom_views.MyButtonView
            android:id="@+id/btnVolumeDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:uIcon="@drawable/ic_round_minus_24" />

        <com.huyhieu.mydocuments.libraries.custom_views.MyButtonView
            android:id="@+id/btnVolumeUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:uIcon="@drawable/ic_add_box_24" />
    </LinearLayout>

</FrameLayout>