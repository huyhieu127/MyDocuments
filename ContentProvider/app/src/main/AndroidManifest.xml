<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="com.huyhieu.contentprovider.provider.READ_DATA" />
    <uses-permission android:name="com.huyhieu.contentprovider.provider.WRITE_DATA" />

    <permission
        android:name="com.huyhieu.contentprovider.provider.READ_DATA"
        android:protectionLevel="signature" />
    <permission
        android:name="com.huyhieu.contentprovider.provider.WRITE_DATA"
        android:protectionLevel="signature" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ContentProvider"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ContentProvider">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name=".content_provider.UserContentProvider"
            android:authorities="com.huyhieu.contentprovider.provider"
            android:readPermission="com.huyhieu.contentprovider.provider.READ_DATA"
            android:writePermission="com.huyhieu.contentprovider.provider.WRITE_DATA"
            android:exported="true" />
    </application>

</manifest>